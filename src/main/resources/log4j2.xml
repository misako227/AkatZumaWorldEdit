<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] [%t/%level] [%logger{36}]: %msg%n"/>
        </Console>

        <!-- 确保路径正确，并添加 immediateFlush 确保日志实时写入 -->
        <File name="MyModFile" fileName="logs/mymod-test.log" append="true" immediateFlush="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t/%level] [%logger]: %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- 使用实际日志器名称（如全限定类名） -->
        <Logger name="com.yourname.yourmod" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="MyModFile"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>